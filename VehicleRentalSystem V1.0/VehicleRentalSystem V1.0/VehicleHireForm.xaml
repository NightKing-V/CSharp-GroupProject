<Window x:Name="VehicleHireForm1" x:Class="VehicleRentalSystem_V1._0.VehicleHireForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehicleRentalSystem_V1._0"
        mc:Ignorable="d"
        Title="VehicleHireForm" Height="550" Width="900"  WindowStartupLocation="CenterScreen">
    <ScrollViewer>
        <Border  CornerRadius="15"  BorderBrush="#71A4E1" BorderThickness="3" Height="1450" Grid.Row="1" Width="700" Margin="0,57,0,0">
            <StackPanel Width="500"
                    Grid.Row="2"
                    Orientation="Vertical"
                    Margin="30,17,30,18">

                <Image Source="C:\Users\lenovo\Documents\GitHub\CSharp-GroupProject\VehicleRentalSystem V1.0\VehicleRentalSystem V1.0\Icon.png"
                   Width="90" Height="74"/>

                <TextBlock Text="Vehicle Hire Form"
                       TextAlignment="Center"
                       FontSize="15"
                       Foreground="#71A4E1"
                       FontWeight="ExtraBold"
                       FontFamily="Century Gothic"
                       Margin="0,30,0,0" Width="246"/>

                <TextBlock Text="Customer Name"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="350"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="txtUser"
                             FontSize="15"
                             TextAlignment="Center"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             CaretBrush="Gray"
                             BorderBrush="White"
                             
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                            />




                </Border>


                <!--Next-->

                <TextBlock Text="Customer NIC"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="txtC_NIC"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />




                </Border>

                <!--Next-->

                <TextBlock Text="Customer Telephone"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="txtC_Telephone"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />




                </Border>

                <!--Next-->

                <TextBlock Text="Customer Email"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="txtC_Email"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />




                </Border>

                <TextBlock Text="Customer Address"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="350"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="C_Address"
                             FontSize="15"
                             TextAlignment="Center"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             CaretBrush="Gray"
                             BorderBrush="White"
                             
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                            />




                </Border>



                <!--Next-->

                <TextBlock Text="Vehicle Chassis Number"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="V_Chassis"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />




                </Border>

                <!--Next-->

                <TextBlock Text="Vehicle Number"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="VehicleNumber"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />




                </Border>

                <!--Next-->
                <TextBlock Text="Start Date"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="45" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <DatePicker x:Name="StartDate" HorizontalAlignment="Left" 
                                Height="25"
                                Margin="8,8,8,8"
                                VerticalAlignment="Top" 
                                Width="230"/>




                </Border>
                <!--Next-->
                <TextBlock Text="End Date"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="45" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <DatePicker x:Name="EndDate" HorizontalAlignment="Left" 
                                Height="25"
                                Margin="8,8,8,8"
                                VerticalAlignment="Top" 
                                Width="230"/>




                </Border>
                <!--Next-->
                <TextBlock Text="Return Date"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="45" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <DatePicker x:Name="ReturnDate" HorizontalAlignment="Left" 
                                Height="25"
                                Margin="8,8,8,8"
                                VerticalAlignment="Top" 
                                Width="230"/>




                </Border>

                <!--Next-->

                <TextBlock Text="Rider Name"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="txtR_Name"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />




                </Border>

                <!--Next-->

                <TextBlock Text="Riderr NIC"
                               FontSize="10"
                               Foreground="Black"
                               FontWeight="ExtraBold"
                               FontFamily="Century Gothic"
                               Margin="0,30,0,0" Width="246"/>

                <Border CornerRadius="15"  
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    HorizontalAlignment="Center" 
                    Height="41" Grid.Row="1" 
                    Width="250"
                    Margin="0,10,0,0"
                    >
                    <TextBox x:Name="txtR_NIC"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             TextAlignment="Center"
                             Foreground="Black"
                              CaretBrush="Gray"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Margin="8,8,8,8"
                             />
                    
                    




                </Border>

                <Button x:Name="btnSubmitVH"
                             
                            BorderThickness="0"
                            Content="Submit"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="MonteSerrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0,20,0,0"
                            Click="btnSubmitVH_Click" Height="44" Width="249">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#71A4E1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#71A4E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>




                <Button x:Name="btnClearVH"
                             
                            BorderThickness="0"
                            Content="Clear"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="MonteSerrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0,20,0,0"
                            Click="btnClearVH_Click" Height="44" Width="249">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Red"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Orange"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>



        </Border>

    </ScrollViewer>
</Window>
