<UserControl x:Class="VehicleRentalSystem_V1._0.DetailsDataV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VehicleRentalSystem_V1._0"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Padding="2,2,0,0">
            <DataGrid.Background>
                <SolidColorBrush Color="#FFF0F0F0" Opacity="0.6"/>
            </DataGrid.Background>
            <DataGrid.BorderBrush>
                <SolidColorBrush Color="#FF688CAF" Opacity="1"/>
            </DataGrid.BorderBrush>
        </DataGrid>
    </Grid>
</UserControl>
